<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2335"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smile.demo.ripplebackground.MainActivity">

    <com.smile.ripplebackground.RippleBackground
        android:id="@+id/rb_background1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:rb_color="@color/ripple_color"
        app:rb_duration="2000"
        app:rb_radius="50dp"
        app:rb_rippleAmount="1"
        app:rb_scale="2">

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/iconmonstr_whatsapp" />

    </com.smile.ripplebackground.RippleBackground>

    <com.smile.ripplebackground.RippleBackground
        android:id="@+id/rb_background2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:rb_color="@color/ripple_color"
        app:rb_duration="5000"
        app:rb_radius="50dp"
        app:rb_rippleAmount="5"
        app:rb_scale="2">

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/iconmonstr_whatsapp" />

    </com.smile.ripplebackground.RippleBackground>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_single"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_muti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_single"
            android:text="@string/app_muti"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>
